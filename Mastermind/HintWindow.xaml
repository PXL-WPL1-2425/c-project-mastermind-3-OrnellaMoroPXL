<Window x:Class="Mastermind.HintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mastermind"
        mc:Ignorable="d"
        Title="Hint" Height="170" Width="320" WindowStartupLocation="CenterOwner">
    <Grid>
        <Button Name="correctColourButton" Content="-15 score" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="120" Height="30" />
        <Button Name="correctColourAndPositionButton" Content="-25 score" HorizontalAlignment="Left" Margin="170,90,0,0" VerticalAlignment="Top" Width="120" Height="30" />
        <TextBlock HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextAlignment="Center">Correct colour</TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="169,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" TextAlignment="Center">Correct colour and position</TextBlock>
    </Grid>
</Window>